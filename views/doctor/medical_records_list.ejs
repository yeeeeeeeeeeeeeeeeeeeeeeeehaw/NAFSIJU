<%- include('../partials/header', { activeTab: 'medical-records' }) %>

<div class="container my-4">
  <h2 class="mb-4">Patients</h2>

  <% if (patients.length === 0) { %>
    <p>No patients found.</p>
  <% } else { %>
    <ul class="list-group">
      <% patients.forEach(patient => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="/doctor/medical-records/<%= patient.id %>"><%= patient.full_name %></a>
          <span class="badge bg-primary rounded-pill"><%= patient.recordsCount || 0 %> Records</span>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
