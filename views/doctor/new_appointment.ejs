<%- include('../partials/header') %>
<div class="container mt-4">
  <h2>ðŸ“… New Appointment</h2>
  <form method="POST" action="/doctor/schedule/new" class="card p-4 shadow-sm">
    <label>Patient:</label>
    <select name="patient_id" class="form-control mb-3">
      <% patients.forEach(p => { %>
        <option value="<%= p.id %>"><%= p.full_name %></option>
      <% }) %>
    </select>
    <label>Start:</label>
    <input type="datetime-local" name="start_at" class="form-control mb-3" required>
    <label>End:</label>
    <input type="datetime-local" name="end_at" class="form-control mb-3" required>
    <label>Notes:</label>
    <textarea name="notes" class="form-control mb-3"></textarea>
    <button class="btn btn-primary">Save Appointment</button>
  </form>
</div>
<%- include('../partials/footer') %>
