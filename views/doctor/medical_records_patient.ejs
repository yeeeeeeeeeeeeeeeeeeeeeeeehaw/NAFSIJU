<%- include('../partials/header', { activeTab: 'medical-records' }) %>

<div class="container my-4">
  <h2 class="mb-4">Medical Records for <%= patient.full_name %></h2>

  <a href="/doctor/medical-records/<%= patient.id %>/new" class="btn btn-success mb-3">+ Add New Record</a>

  <% if (medicalRecords.length === 0) { %>
    <p>No records found for this patient.</p>
  <% } else { %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Chief Complaint</th>
          <th>Diagnosis</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% medicalRecords.forEach(record => { %>
          <tr>
            <td><%= new Date(record.record_date).toLocaleDateString() %></td>
            <td><%= record.chief_complaint %></td>
            <td><%= record.diagnosis %></td>
            <td>
              <a href="/doctor/medical-records/<%= patient.id %>/<%= record.id %>" class="btn btn-primary btn-sm">View/Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <a href="/doctor/medical-records" class="btn btn-secondary mt-3">Back to Patients</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
