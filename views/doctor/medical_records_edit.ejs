<%- include('../partials/header', { activeTab: 'medical-records' }) %>

<div class="container my-4">
  <h2>Edit Record for <%= patient.full_name %></h2>

  <form action="/doctor/medical-records/<%= patient.id %>/<%= record.id %>/edit" method="POST">
    <div class="mb-3">
      <label for="record_date" class="form-label">Date</label>
      <input type="date" class="form-control" id="record_date" name="record_date" value="<%= record.record_date.toISOString().split('T')[0] %>" required>
    </div>

    <div class="mb-3">
      <label for="chief_complaint" class="form-label">Chief Complaint</label>
      <textarea class="form-control" id="chief_complaint" name="chief_complaint" rows="2" required><%= record.chief_complaint %></textarea>
    </div>

    <div class="mb-3">
      <label for="diagnosis" class="form-label">Diagnosis</label>
      <textarea class="form-control" id="diagnosis" name="diagnosis" rows="2"><%= record.diagnosis %></textarea>
    </div>

    <div class="mb-3">
      <label for="therapy_notes" class="form-label">Therapy Notes</label>
      <textarea class="form-control" id="therapy_notes" name="therapy_notes" rows="3"><%= record.therapy_notes %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/doctor/medical-records/<%= patient.id %>" class="btn btn-secondary">Cancel</a>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
