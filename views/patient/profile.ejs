<%- include("../partials/header") %>
<div class="container mt-4">
  <h2>ðŸ‘¤ Patient Profile</h2>

  <form method="POST" action="/patient/profile" class="mt-3">
    <div class="mb-3">
      <label for="full_name" class="form-label">Full Name</label>
      <input type="text" class="form-control" id="full_name" name="full_name" value="<%= patient.full_name || '' %>" required>
    </div>
    <div class="mb-3">
      <label for="gender" class="form-label">Gender</label>
      <input type="text" class="form-control" id="gender" name="gender" value="<%= patient.gender || '' %>" required>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone" value="<%= patient.phone || ''%>">
    </div>
    <div class="mb-3">
      <label for="address" class="form-label">Address</label>
      <input type="text" class="form-control" id="address" name="address" value="<%= patient.address || '' %>">
    </div>
    <div class="mb-3">
      <label for="date_of_birth" class="form-label">Date of Birth</label>
      <input type="date" class="form-control" id="date_of_birth" name="date_of_birth" value="<%= patient.date_of_birth || '' %>">
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
  </form>
</div>
<%- include("../partials/footer") %>
